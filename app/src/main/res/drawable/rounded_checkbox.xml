<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorCheckBoxChecked" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <stroke android:width="20px" android:color="@color/colorCheckBoxUnchecked" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>
